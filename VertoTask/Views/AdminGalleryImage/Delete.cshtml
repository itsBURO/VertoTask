@model VertoTask.Models.GalleryImage

<h2>Delete This Image?</h2>
<p>Are you sure you want to delete this image?</p>
<h3>@Model.Title</h3>
<form asp-action="DeleteConfirmed" asp-controller="AdminGalleryImage" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="button alert">Delete</button>
    <a asp-action="Index" class="button">Cancel</a>
</form>
