@model VertoTask.Models.News

<h2>Delete News</h2>
<p>Are you sure you want to delete this news report?</p>
<h3>@Model.NewsHeading</h3>
<form asp-action="DeleteConfirmed" asp-controller="AdminNews" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="button alert">Delete</button>
    <a asp-action="Index" class="button">Cancel</a>
</form>
