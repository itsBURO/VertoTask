@model VertoTask.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid-x grid-margin-x">
    <div class="cell large-8 medium-10 small-12">

        <h2>Create Product</h2>

        <form asp-action="Create" asp-controller="AdminProduct" method="post" enctype="multipart/form-data">
            <div class="grid-container">
                <div class="grid-x grid-padding-x">

                    <div class="cell medium-12">
                        <label>
                            Name
                            <input type="text" asp-for="ProductName" required />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Type
                            <input type="text" asp-for="Type" required />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Price
                            <input type="number" step="0.01" asp-for="Price" required />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Description
                            <textarea asp-for="Description" rows="4"></textarea>
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Image
                            <input type="file" name="imageFile" required />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <input type="submit" class="button success" value="Create" />
                    </div>

                </div>
            </div>
        </form>
        <div class="admin-button-container">
            <a href="@Url.Action("Index", "Admin")" class="button primary">Go to Admin</a>
        </div>
    </div>
</div>
