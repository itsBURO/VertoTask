@model VertoTask.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid-x grid-margin-x">
    <div class="cell large-8 medium-10 small-12">

        <h2>Delete Product</h2>
        <p>Are you sure you want to delete this product?</p>
        <h3>@Model.ProductName</h3>

        <form asp-action="Delete" asp-controller="AdminProduct" method="post">
            <div class="grid-container">
                <div class="grid-x grid-padding-x">

                    <div class="cell medium-12">
                        <input type="hidden" asp-for="Id" />
                    </div>

                    <div class="cell medium-12">
                        <button type="submit" class="button alert">Delete</button>
                        <a asp-action="Index" class="button secondary">Cancel</a>
                    </div>

                </div>
            </div>
        </form>

    </div>
</div>
