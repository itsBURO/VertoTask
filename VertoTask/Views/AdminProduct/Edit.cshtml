@model VertoTask.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid-x grid-margin-x">
    <div class="cell large-8 medium-10 small-12">

        <h2>Edit Product</h2>

        <form asp-action="Edit" asp-controller="AdminProduct" method="post" enctype="multipart/form-data">
            <div class="grid-container">
                <div class="grid-x grid-padding-x">

                    <input type="hidden" asp-for="Id" />

                    <div class="cell medium-12">
                        <label>
                            Name
                            <input type="text" asp-for="ProductName" />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Type
                            <input type="text" asp-for="Type" />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Price
                            <input type="number" step="0.01" asp-for="Price" />
                        </label>
                    </div>

                    <div class="cell medium-12">
                        <label>
                            Description
                            <textarea asp-for="Description" rows="4"></textarea>
                        </label>
                    </div>

                    <!-- Image Upload Field -->
                    <div class="cell medium-12">
                        <label>
                            Image
                            <input type="file" name="imageFile" />
                            <span>Current: @Model.ImageUrl</span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="cell medium-12">
                        <input type="submit" class="button success" value="Update" />
                    </div>

                </div>
            </div>
        </form>

    </div>
</div>
